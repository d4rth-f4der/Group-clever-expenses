# Copy this file to .env and fill in values
# Do NOT commit your real .env

# Required
MONGO_URI=
JWT_SECRET=

# Optional
# Allow a specific origin for CORS (e.g. http://localhost:3000 for a separate frontend)
CORS_ORIGIN=

# Set to 'production' to set morgan to 'combined' format for production logging
NODE_ENV=

# App base URL used in verification links (defaults to current request origin if empty)
APP_BASE_URL=

# SMTP configuration for sending real emails (used by utils/mailer.js)
# If unset, app falls back to console preview mode.
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
# Set to true for port 465 (TLS). For 587/25 use false.
SMTP_SECURE=false

# From address used for outgoing emails
MAIL_FROM="Clever Expenses <no-reply@yourdomain.com>"
